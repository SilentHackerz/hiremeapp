  body
    .container-contact100
      .wrap-contact100
        form.contact100-form.validate-form(method='POST', action='/')
          span.contact100-form-title Hire Me - The Hacking School Bootcamper
          label.label-input100(for='first-name') Enter your name *
          .wrap-input100.rs1-wrap-input100.validate-input(data-validate='Type first name')
            input#first-name.input100(type='text', name='firstname', placeholder='First name')
            span.focus-input100
          .wrap-input100.rs2-wrap-input100.validate-input(data-validate='Type last name')
            input.input100(type='text', name='lastname', placeholder='Last name')
            span.focus-input100
          label.label-input100(for='email') Enter only valid email *
          .wrap-input100.validate-input(data-validate='Valid email is required: ex@abc.xyz')
            input#email.input100(type='text', name='email', placeholder='Eg. example@email.com')
            span.focus-input100
          label.label-input100(for='phone') Enter only valid phone number
          .wrap-input100
            input#phone.input100(type='text', name='phone', placeholder='Eg. +91 8688258936')
            span.focus-input100
          label.label-input100(for='message') Enter job Description *
          .wrap-input100.validate-input(data-validate='Message is required')
            textarea#message.input100(name='message', placeholder='Write us a message')
            span.focus-input100
          .container-contact100-form-btn
            button.contact100-form-btn Send Message
        .contact100-more.flex-col-c-m(style="background-image: url('images/bg-01.jpg');")
          .flex-w.size1.p-b-47
            .txt1.p-r-25
              span.lnr.lnr-map-marker
            .flex-col.size2
              span.txt1.p-b-20 Address
              span.txt2 Gachibowli, Hyderabad, Telangana, India.
          .dis-flex.size1.p-b-47
            .txt1.p-r-25
              span.lnr.lnr-phone-handset
            .flex-col.size2
              span.txt1.p-b-20 Lets Talk
              span.txt3 +91 8688258936
          .dis-flex.size1.p-b-47
            .txt1.p-r-25
              span.lnr.lnr-envelope
            .flex-col.size2
              span.txt1.p-b-20 Email me at
              span.txt3
                a  mohammad.tech36@gmail.com
